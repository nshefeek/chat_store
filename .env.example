# Database Configuration
DATABASE_HOST=localhost
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=chat_store
DATABASE_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis

# API Configuration
API_KEY=your-secret-api-key-here
API_V1_STR=/api/v1

# CORS Configuration (comma-separated list)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8000

# Rate Limiting Configuration
RATE_LIMITER_ENABLED=false
RATE_LIMITER_MAX_REQUESTS=100
RATE_LIMITER_TIMEFRAME=60

# Rate limits per endpoint
RATE_LIMIT_CREATE_SESSION=10/minute
RATE_LIMIT_LIST_SESSIONS=30/minute
RATE_LIMIT_CREATE_MESSAGE=50/minute
RATE_LIMIT_GET_MESSAGES=100/minute
RATE_LIMIT_RESUME_MESSAGE=5/minute
RATE_LIMIT_UPDATE_SESSION=20/minute
RATE_LIMIT_DELETE_SESSION=10/minute
RATE_LIMIT_TOGGLE_FAVORITE=20/minute

# Debug Configuration
DEBUG=false

# PGAdmin Configuration (for development)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin